<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.settings.SettingsUserLoggedInFragment">

        <LinearLayout
            android:background="@color/primary"
            android:layout_height="188dp"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_go_back"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_width="24dp"
                android:src="@drawable/ic_back__2_" />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_height="92dp"
                android:layout_marginTop="8dp"
                android:layout_width="92dp"
                android:src="@drawable/ic_logo" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/background"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="프로필 설정"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:textColor="#4D4447"
                    tools:text="idxxxxxxxx@gmail.com" />
            </LinearLayout>

            <EditText
                android:background="@drawable/bg_modify_info"
                android:hint="닉네임을 입력하세요."
                android:id="@+id/et_user_nickname"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:textColorHint="@color/edittext_hint"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/bg_save"
                android:id="@+id/btn_save"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:text="저장"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="계정 설정"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:text="비밀번호 변경"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:text="새 비밀번호"
                android:textColor="@color/black" />

            <EditText
                android:background="@drawable/bg_modify_info"
                android:hint="새 비밀번호"
                android:id="@+id/et_new_password"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:textColorHint="@color/edittext_hint"
                android:textSize="12sp" />

            <EditText
                android:background="@drawable/bg_modify_info"
                android:hint="새 비밀번호 확인"
                android:id="@+id/et_new_password_check"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:textColorHint="@color/edittext_hint"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:text="현재 비밀번호"
                android:textColor="@color/black" />

            <EditText
                android:background="@drawable/bg_modify_info"
                android:hint="현재 비밀번호"
                android:id="@+id/et_current_password"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:textColorHint="@color/edittext_hint"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/bg_save"
                android:id="@+id/btn_change_password"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:text="비밀번호 변경"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/bg_logout"
                android:id="@+id/btn_logout"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:text="로그아웃"
                android:textColor="@color/logout_text_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
